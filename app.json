{
    "name": "mds",
    "description": "Use the API to download the data from Museum Data Service",
    "keywords": [
        "php",
        "symfony",
        "api",
        "museum data service"
    ],
    "cron": [
        {
            "command": "php -d memory_limit=2G bin/console messenger:consume async  --time-limit 53",
            "schedule": "*/1 * * * *"
        },
        {
            "command": "php -d memory_limit=2G bin/console messenger:consume load_records  --time-limit 175",
            "schedule": "*/3 * * * *"
        },
        {
            "command": "php -d memory_limit=2G bin/console messenger:consume load_records  --time-limit 230",
            "schedule": "*/4 * * * *"
        }
    ],

    "repository": "https://github.com/survos-sites/mds",
    "scripts": {
        "dokku": {
            "predeploy": "bin/console importmap:install && bin/console asset-map:compile && bin/console  secrets:decrypt-to-local --force && bin/console doctrine:migrations:migrate -n --allow-no-migration",
            "postdeploy": "bin/console about"
        }
    },
    "env": {
        "SECRET_TOKEN": {
            "description": "A secret key for verifying the integrity of signed cookies.",
            "value": "secret"
        },
        "WEB_CONCURRENCY": {
            "description": "The number of processes to run.",
            "generator": "echo 5"
        }
    },
    "image": "gliderlabs/herokuish",
    "addons": [
        "dokku-postgres",
        "dokku-redis"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-php.git"
        }
    ]
}
